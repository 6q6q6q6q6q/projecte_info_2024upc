}

void comparar_intervempleos2(int grado1, const tdatos& CONS1, const tporcentajes& CONS2, const vector<string> regiones) {

int J;

for ( J = 0 ; J < 18 ; J++) {

cout << "PORCENTAJE DE PERSONAS EN " << regiones[J] << " CON UN SALARIO:  <700 " << CONS2[J][grado1-1].pp1 << "%  700-999 " << CONS2[J][grado1-1].pp2 << "%  1000-1499 " << CONS2[J][grado1-1].pp3 << "%  1500-1999 ";
cout << CONS2[J][grado1-1].pp4 << "%  2000-2499 " << CONS2[J][grado1-1].pp5 << "%  2500-2999 " << CONS2[J][grado1-1].pp6 << "%  >3000 " << CONS2[J][grado1-1].pp7 << "%  No_consta ";
cout << CONS2[J][grado1-1].noconspp << "%." << endl << endl;

}

int pp1max, pp2max, pp3max, pp4max, pp5max, pp6max, pp7max, pp8max;
double ppmax = 0.0;

for ( J = 0 ; J < 18 ; J++) {

if ( CONS2[J][grado1-1].pp1 > ppmax) {

    ppmax = CONS2[J][grado1-1].pp1;

    pp1max = J;

}

}

ppmax = 0.0;

for ( J = 0 ; J < 18 ; J++) {

if ( CONS2[J][grado1-1].pp2 > ppmax) {

    ppmax = CONS2[J][grado1-1].pp2;

    pp2max = J;

}

}

ppmax = 0.0;

for ( J = 0 ; J < 18 ; J++) {

if ( CONS2[J][grado1-1].pp3 > ppmax) {

    ppmax = CONS2[J][grado1-1].pp3;

    pp3max = J;

}

}

ppmax = 0.0;

for ( J = 0 ; J < 18 ; J++) {

if ( CONS2[J][grado1-1].pp4 > ppmax) {

    ppmax = CONS2[J][grado1-1].pp4;

    pp4max = J;

}

}

ppmax = 0.0;

for ( J = 0 ; J < 18 ; J++) {

if ( CONS2[J][grado1-1].pp5 > ppmax) {

    ppmax = CONS2[J][grado1-1].pp5;

    pp5max = J;

}

}

ppmax = 0.0;


for ( J = 0 ; J < 18 ; J++) {

if ( CONS2[J][grado1-1].pp6 > ppmax) {

    ppmax = CONS2[J][grado1-1].pp6;

    pp6max = J;

}

}

ppmax = 0.0;

for ( J = 0 ; J < 18 ; J++) {

if ( CONS2[J][grado1-1].pp6 > ppmax) {

    ppmax = CONS2[J][grado1-1].pp6;

    pp6max = J;

}

}

ppmax = 0.0;


cout << "LA REGION DONDE HAY MAS PORCENTAJE DE PERSONAS QUE COBRAN MENOS DE 700 ES " << regiones[pp1max] << endl << endl;
cout << "LA REGION DONDE HAY MAS PORCENTAJE DE PERSONAS QUE COBRAN ENTRE 700 Y 999 ES " << regiones[pp2max] << endl << endl;
cout << "LA REGION DONDE HAY MAS PORCENTAJE DE PERSONAS QUE COBRAN ENTRE 1000 Y 1499 ES " << regiones[pp3max] << endl << endl;
cout << "LA REGION DONDE HAY MAS PORCENTAJE DE PERSONAS QUE COBRAN ENTRE 1500 Y 1999 ES " << regiones[pp4max] << endl << endl;
cout << "LA REGION DONDE HAY MAS PORCENTAJE DE PERSONAS QUE COBRAN ENTRE 2000 Y 2499 ES " << regiones[pp5max] << endl << endl;
cout << "LA REGION DONDE HAY MAS PORCENTAJE DE PERSONAS QUE COBRAN ENTRE 2499 Y 2999 ES " << regiones[pp6max] << endl << endl;
cout << "LA REGION DONDE HAY MAS PORCENTAJE DE PERSONAS QUE COBRAN MAS DE 3000 ES " << regiones[pp7max] << endl << endl;
cout << "LA REGION DONDE HAY MAS PORCENTAJE DE PERSONAS QUE NO ESPECIFICAN LO QUE COBRAN ES " << regiones[pp8max] << endl << endl;


}

void ACCION_4( const tdatos& CONS1, const vector<string> regiones, const vector <string>& carreras) {
setlocale (LC_ALL, "spanish");
cout << "---------------------------------------------------------------------------------------------------------------------------------------" << endl ;
cout << "|                                       BUSCADOR DEL SECTOR DONDE HAY MÁS TRABAJADORES NUEVOS                                         |" << endl ;
cout << "---------------------------------------------------------------------------------------------------------------------------------------" << endl << endl ;
cout << "---------------------------------------------------------------------------------------------------------------------------------------" << endl ;
cout << "|                                                            INSTRUCCIONES                                                            |" << endl ;
cout << "|                                                                                                                                     |" << endl ;
cout << "|      1. Selecciona la region que quieras conocer los datos con los respectivos números                                              |" << endl ;
cout << "|                                                                                                                                     |" << endl ;
cout << "---------------------------------------------------------------------------------------------------------------------------------------" << endl ;
cout << "---------------------------------------------------------------------------------------------------------------------------------------" << endl ;
cout << "|                                                         COMUNIDADES AUTONOMAS                                                       |" << endl ;
cout << "---------------------------------------------------------------------------------------------------------------------------------------" << endl << endl ;
cout << "---------------------------------------------------------------------------------------------------------------------------------------" << endl ;
cout << "|                                                                                                                                     |" << endl ;
cout << "|          1. Nacional                       6. Canarias                      11. Comunitat Valenciana     16. Navarra                |" << endl ;
cout << "|                                                                                                                                     |" << endl ;
cout << "|          2. Andalucía                      7. Cantabria                     12. Extremadura              17. País Vasco             |" << endl ;
cout << "|                                                                                                                                     |" << endl ;
cout << "|          3. Aragón                         8. Castilla y León               13. Galicia                  18. La Rioja               |" << endl ;
cout << "|                                                                                                                                     |" << endl ;
cout << "|          4. Principado de Asturias         9. Castilla la Mancha            14. Madrid                                              |" << endl ;
cout << "|                                                                                                                                     |" << endl ;
cout << "|          5. Islas Baleares                10. Cataluña                      15. Murcia                                              |" << endl ;
cout << "|                                                                                                                                     |" << endl ;
cout << "---------------------------------------------------------------------------------------------------------------------------------------" << endl ;

int region;
cin>>region;
while (region!=1 && region!=2 && region!=3 &&  region!=4 &&  region!=5 &&  region!=6 && region!=7 &&  region!=8 &&  region!=9 &&  region!=10 &&
        region!=11 &&  region!=12 &&  region!=13 &&  region!=14 &&  region!=15  &&  region!=16 &&  region!=17 &&  region!=18)
{cout<<"POR FAVOR, INTRODUZCA UN NUMERO ADECUADO..."<<endl; cin>>region;}

system("cls");
int jmax, auxmax=0;
 for (int j=1; j<42;j++){
int  treballadors; // per mes tard guardar el valor més gran
treballadors = CONS1[region-1][j].tot;

    if (treballadors>auxmax) {auxmax=treballadors;jmax=j;}


}

cout << "---------------------------------------------------------------------------------------------------------------------------------------" << endl ;
cout << "|                                                        RESULTADOS                                                                   |" << endl ;
cout << "---------------------------------------------------------------------------------------------------------------------------------------" << endl << endl ;
cout << "---------------------------------------------------------------------------------------------------------------------------------------" << endl ;
cout << "|                                                                                                                                     |" << endl ;
cout << "|             En esta región el sector dónde predominan nuevos trabajadores es: " << carreras [jmax]    <<"                           |" << endl ;
cout << "|                                                                                                                                     |" << endl ;
cout << "---------------------------------------------------------------------------------------------------------------------------------------" << endl ;


 }

