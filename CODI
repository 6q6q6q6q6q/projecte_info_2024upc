void obten_consulta ( int region, int grado, const tdatos& CONS1, const tporcentajes& CONS2, const vector <string>& carreras ) {

cout << endl << "Los datos del salario en el primer trabajo de este sector se presentan mostrando el numero de personas que cobra un salario entre un" << endl ;
cout << "intervalo, así como el porcentaje que supone respecto el total de personas que constan en nuestra base de datos" << endl << endl ;

cout << "Los resultados para la carrera / sector " << carreras[grado-1] ;

switch (region) {

    case 1: {cout << " en toda España " ; break ;}
    case 2: {cout << " en la comunidad de Andalucia" ; break ;}
    case 3: {cout << " en la comunidad de Aragon" ; break ;}
    case 4: {cout << " en la comunidad de Asturias"  ; break ;}
    case 5: {cout << " en la comunidad de las islas Baleares"; break ;}
    case 6: {cout << " en la comunidad de Canarias" ; break ;}
    case 7: {cout << " en la comunidad de Cantabria" ; break ;}
    case 8: {cout << " en la comunidad de Castilla y Leon" ; break ;}
    case 9: {cout << " en la comunidad de Castilla y la Mancha" ; break ;}
    case 10: {cout << " en la comunidad de Catalunya" ; break ;}
    case 11: {cout << " en la comunidad de Valencia" ; break ;}
    case 12: {cout << " en la comunidad de Extremadura" ; break ;}
    case 13: {cout << " en la comunidad de Galicia" ; break ;}
    case 14: {cout << " en la comunidad de Madrid" ; break ;}
    case 15: {cout << " en la comunidad de Murcia" ; break ;}
    case 16: {cout << " en la comunidad de Navarra" ; break ;}
    case 17: {cout << " en la comunidad de Pais Basco" ; break ;}
    case 18: {cout << " en la comunidad de La Rioja" ; break ;}

}

cout << " son:" << endl << endl ;
cout << "Total de trabajadores registrados " << CONS1[region-1][grado-1].tot << endl << endl;
cout << "Trabajadores con salario de menos de 700€ mensuales: " << CONS1[region-1][grado-1].s1 << ", que suponen un " << CONS2[region-1][grado-1].pp1 << "%." << endl << endl;
cout << "Trabajadores con salario entre 700€ y 999€ mensuales: " << CONS1[region-1][grado-1].s2 << ", que suponen un " << CONS2[region-1][grado-1].pp2 << "%." << endl <<endl;
cout << "Trabajadores con salario entre 1000€ y 1499€ mensuales: " << CONS1[region-1][grado-1].s3 << ", que suponen un " << CONS2[region-1][grado-1].pp3 << "%." << endl << endl;
cout << "Trabajadores con salario entre 1500€ y 1999€ mensuales: " << CONS1[region-1][grado-1].s4 << ", que suponen un " << CONS2[region-1][grado-1].pp4 << "%." << endl << endl;
cout << "Trabajadores con salario entre 2000€ y 2499€ mensuales: " << CONS1[region-1][grado-1].s5 << ", que suponen un " << CONS2[region-1][grado-1].pp5 << "%." << endl << endl;
cout << "Trabajadores con salario entre 2500€ y 2999€ mensuales: " << CONS1[region-1][grado-1].s6 << ", que suponen un " << CONS2[region-1][grado-1].pp6 << "%." << endl << endl;
cout << "Trabajadores con salario de mas de 3000€ mensuales: " << CONS1[region-1][grado-1].s7 << ", que suponen un " << CONS2[region-1][grado-1].pp7 << "%." << endl << endl;
cout << "Trabajadores cuyo salario no costa en la base de datos: " << CONS1[region-1][grado-1].nocons << ", que suponen un " << CONS2[region-1][grado-1].noconspp << "%." << endl << endl << endl;

}

void comparar_intervempleos(int region1, int region2 , int grado1, int grado2, const tdatos& CONS1, const tporcentajes& CONS2) {

cout << "Total de trabajadores registrados en el empleo 1: " << CONS1[region1-1][grado1-1].tot << endl ;
cout << "Total de trabajadores registrados en el empleo 2: " << CONS1[region2-1][grado2-1].tot << endl << endl << endl;
cout << "Trabajadores con salario de menos de 700€ mensuales: " << endl ;
cout << "EMPLEO 1: " << CONS2[region1-1][grado1-1].pp1 << "%.      EMPLEO 2: "<< CONS2[region2-1][grado2-1].pp1 << "%." << endl << endl;
cout << "Trabajadores con salario entre 700€ y 999€ mensuales: " << endl ;
cout << "EMPLEO 1: " << CONS2[region1-1][grado1-1].pp2 << "%.      EMPLEO 2: "<< CONS2[region2-1][grado2-1].pp2 << "%." << endl << endl;
cout << "Trabajadores con salario entre 1000€ y 1499€ mensuales: " << endl ;
cout << "EMPLEO 1: " << CONS2[region1-1][grado1-1].pp3 << "%.      EMPLEO 2: "<< CONS2[region2-1][grado2-1].pp3 << "%." << endl << endl;
cout << "Trabajadores con salario entre 1500€ y 1999€ mensuales: " << endl ;
cout << "EMPLEO 1: " << CONS2[region1-1][grado1-1].pp4 << "%.      EMPLEO 2: "<< CONS2[region2-1][grado2-1].pp4 << "%." << endl << endl;
cout << "Trabajadores con salario entre 2000€ y 2499€ mensuales: " << endl ;
cout << "EMPLEO 1: " << CONS2[region1-1][grado1-1].pp5 << "%.      EMPLEO 2: "<< CONS2[region2-1][grado2-1].pp5 << "%." << endl << endl;
cout << "Trabajadores con salario entre 2500€ y 2999€ mensuales: " << endl ;
cout << "EMPLEO 1: " << CONS2[region1-1][grado1-1].pp6 << "%.      EMPLEO 2: "<< CONS2[region2-1][grado2-1].pp6 << "%." << endl << endl;
cout << "Trabajadores con salario de mas de 3000€ mensuales: " << endl ;
cout << "EMPLEO 1: " << CONS2[region1-1][grado1-1].pp7 << "%.      EMPLEO 2: "<< CONS2[region2-1][grado2-1].pp7 << "%." << endl << endl;
cout << "Trabajadores cuyo salario no costa en la base de datos: " << endl;
